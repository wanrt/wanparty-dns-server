#!/bin/sh
 


set -e
 



case "$1" in
    configure)
    DEPARTEMENT=$(cat /etc/departement)

    echo "Config Serveur DNS"
    systemctl stop bind9 
    cp /usr/share/wanparty/etc/bind/named.conf.options /etc/bind/
    cp /usr/share/wanparty/etc/bind/named.conf.local /etc/bind/
    cp /usr/share/wanparty/etc/bind/db.wan /etc/bind/
    sed -i -e "s/DEPT/$DEPARTEMENT/g" /etc/bind/db.wan
    systemctl start bind9 

    
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
